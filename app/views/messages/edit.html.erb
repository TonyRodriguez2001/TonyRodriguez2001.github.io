<body style="background-color: #1a1a1a; color: white;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 p-3">
      <%= image_tag('SelfDestructLogo.png', alt: 'Self Destruct Logo', height: "45", width: "400", class: "float-start me-2") %>
      </div>
    </div>
    <div class="row">
    <h1>Editing Message</h1>
      <div class="col-12 p-3">
        <h2 class="h5">Messages</h2>
        <table class="table table-dark table-striped">
          <thead>
          <tbody>
              <tr>
                <td><%= render 'form', message: @message %></td>
                <td><%= link_to 'Show', @message %></td>
                <td><%= link_to 'Back', messages_path %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>